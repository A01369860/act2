def convertir_decimal_binario(numero):
  """
  Convierte un número decimal a binario.

  Parámetros:
    numero: El número decimal a convertir.

  Retorno:
    El número binario equivalente.
  """
  binario = ""
  while numero > 0:
    binario = str(numero % 2) + binario
    numero //= 2
  return binario

def factorial(numero):
  """
  Calcula el factorial de un número.

  Parámetros:
    numero: El número al que calcular el factorial.

  Retorno:
    El factorial de 'numero'.
  """
  if numero == 0:
    return 1
  else:
    return numero * factorial(numero - 1)

# Pruebas de las funciones
numero_decimal = 10
numero_factorial = 5

print(f"Decimal a binario ({numero_decimal}): {convertir_decimal_binario(numero_decimal)}")
print(f"Factorial de ({numero_factorial}): {factorial(numero_factorial)}")
